{
  "name": "@devzolo/node-native-gl",
  "version": "1.0.0",
  "main": "dist",
  "author": "Raphael-ZoLo <zolotorevsky@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/devzolo/node-native-gl",
  "publishConfig": {
    "@devzolo:registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "bin"
  ],
  "binary": {
    "module_name": "@devzolo/node-native-gl",
    "module_path": "./bin/{platform}/{arch}/native-gl.node",
    "package_name": "release.zip",
    "host": "https://github.com",
    "remote_path": "/devzolo/node-native-gl/releases/download/main"
  },
  "scripts": {
    "install": "node-pre-gyp install --fallback-to-build",
    "prebuild": "rimraf ./dist",
    "build": "node-pre-gyp install --build-from-source",
    "postbuild": "tsc",
    "dist": "tsc",
    "package": "tsc&&node-pre-gyp install --build-from-source&&jest&&./node_modules/.bin/node-pre-gyp build package",
    "test": "jest --coverage",
    "sources": "deps-source"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.6",
    "node-addon-api": "^4.2.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.1.16",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
